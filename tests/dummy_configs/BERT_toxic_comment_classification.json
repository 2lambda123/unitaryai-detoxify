{
    "name": "Jigsaw_BERT",
    "n_gpu": 1,
    "batch_size": 10,
    "accumulate_grad_batches": 3,
    "gpus": "1",
    "arch": {
        "type": "BERT",
        "args": {
            "num_classes": 6,
            "model_type": "bert-base-uncased",
            "model_name": "BertForSequenceClassification",
            "tokenizer_name": "BertTokenizer"
        }
    },
    "dataset": {
        "type": "JigsawDataOriginal",
        "args": {
            "train_csv_file": "tests/dummy_data/jigsaw-toxic-comment-classification-challenge/train.csv",
            "test_csv_file": null,
            "val_fraction": 0.1,
            "create_val_set": true,
            "add_test_labels": true
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 3e-5,
            "weight_decay": 3e-6,
            "amsgrad": true
        }
    }
}