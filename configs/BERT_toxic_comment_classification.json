{
    "name": "Jigsaw_BERT",
    "n_gpu": 1,
    "batch_size": 10,
    "accumulate_grad_batches": 3,
    "arch": {
        "type": "BERT",
        "args": {
            "num_classes": 6,
            "freeze": false
        }
    },
    "dataset": {
        "type": "JigsawDataBERT",
        "args": {
            "train_csv_file": "jigsaw_data/jigsaw-toxic-comment-classification-challenge/train.csv",
            "test_csv_file": null,
            "train_fraction": 0.9,
            "create_val_set": true,
            "add_test_labels": true
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 3e-5,
            "weight_decay": 3e-6,
            "amsgrad": true
        }
    }
}